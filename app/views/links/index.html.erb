<h1>Listing links</h1>

<table border="1">
  <thead>
    <tr>
      <th>Full link</th>
      <th>Youtube link</th>
      <th>Progress</th>
      <th>Seen count</th>
      <th>Video</th>
      <th>Transcript</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.full_link %></td>
        <td><%= link.youtube_link %></td>
        <td><%= link.progress %></td>
        <td><%= link.seen_count %></td>
        <td><%= link.video_id %></td>
        <td><%= link.transcript_id %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

